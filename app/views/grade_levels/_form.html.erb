<%= form_for(@grade_level) do |f| %>
  <% if @grade_level.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@grade_level.errors.count, "error") %> prohibited this grade_level from being saved:</h2>

      <ul>
      <% @grade_level.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :number %><br>
    <%= f.number_field :number %>
  </div>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>


  <% 
    # pick the selection value
    selectTeacherValue = 0 
    if @grade_level.person != nil 
        selectTeacherValue = @grade_level_person.id
    end 

  %> 

 <div class="field">
     <%= f.label :person %><br>
     <%= f.fields_for :grade_level_teacher do |glt| %>
         <%= glt.collection_select(:person_id, Person.joins(:role_types).where(role_types: {roleName: 'Teacher'}), :id, :fullName, { :selected => selectTeacherValue, include_blank: true }, { } ) %>
     <% end %>
  </div>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
