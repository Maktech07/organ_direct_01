<h1>Listing name_titles</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @name_titles.each do |name_title| %>
      <tr>
        <td><%= name_title.title %></td>

        <td>
            <div>
                <%= link_to '', name_title, class: "btn show-btn glyphicon glyphicon-eye-open", title: "Show" %>
                <%= link_to '', edit_name_title_path(name_title), class: "btn edit-btn glyphicon glyphicon-pencil", title: "Edit" %>
                <%= link_to '', name_title, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn destroy-btn glyphicon glyphicon-remove-sign", title: "Delete" %>
            </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '', new_name_title_path, class: "btn add-new-btn glyphicon glyphicon-plus" %> &nbsp; Add New Name Title
