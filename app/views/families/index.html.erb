<div class="row">
    <div class="col-xs-7">
        <h1>Listing Families</h1> 
    </div>
    <div class="col-xs-3 mid-top-margin" >
        <%= link_to '', new_family_path, class: "btn add-new-btn glyphicon glyphicon-plus" %> &nbsp; Add New Family
    </div>
</div>


<table class="table table-striped">
  <thead>
    <tr>
      <th>Familyname</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @families.each do |family| %>
      <tr>
        <td><%= family.familyName %></td>
        <td>
            <div>
                <%= link_to '', family, class: "btn show-btn glyphicon glyphicon-eye-open", title: "Show" %>
                <%= link_to '', edit_family_path(family), class: "btn edit-btn glyphicon glyphicon-pencil", title: "Edit" %>
                <%= link_to '', family, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn destroy-btn glyphicon glyphicon-remove-sign", title: "Delete" %>
            </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '', new_family_path, class: "btn add-new-btn glyphicon glyphicon-plus" %> &nbsp; Add New Family
