<h1>Listing role_types</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Rolename</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @role_types.each do |role_type| %>
      <tr>
        <td><%= role_type.roleName %></td>
        <td><%= link_to 'Show', role_type %></td>
        <td><%= link_to 'Edit', edit_role_type_path(role_type) %></td>
        <td><%= link_to 'Destroy', role_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '', new_role_type_path, class: "btn btn-success glyphicon glyphicon-plus" %> &nbsp; Add New Role Type 
