<h1>Listing genders</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Gender</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @genders.each do |gender| %>
      <tr>
        <td><%= gender.gender %></td>
        <td>
            <div>
                <%= link_to '', gender, class: "btn show-btn glyphicon glyphicon-eye-open", title: "Show" %>
                <%= link_to '', edit_gender_path(gender), class: "btn edit-btn glyphicon glyphicon-pencil", title: "Edit" %>
                <%= link_to '', gender, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn destroy-btn glyphicon glyphicon-remove-sign", title: "Delete" %>
            </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '', new_gender_path, class: "btn add-new-btn glyphicon glyphicon-plus" %> &nbsp; Add New Gender
