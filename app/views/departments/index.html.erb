<div class="row">
    <div class="col-xs-7">
        <h1>Listing Departments</h1> 
    </div>
    <div class="col-xs-3 mid-top-margin" >
        <%= link_to '', new_department_path, class: "btn  add-new-btn glyphicon glyphicon-plus" %> &nbsp; Add New Department
    </div>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @departments.each do |department| %>
      <tr>
          <td><div class="h5"><%= department.name %></div></td>
          <td>
            <div>
                <%= link_to '', department, class: "btn show-btn glyphicon glyphicon-eye-open", title: "Show" %>
                <%= link_to '', edit_department_path(department), class: "btn edit-btn glyphicon glyphicon-pencil", title: "Edit" %>
                <%= link_to '', department, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn destroy-btn glyphicon glyphicon-remove-sign", title: "Delete" %>
            </div>
          </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '', new_department_path, class: "btn add-new-btn glyphicon glyphicon-plus" %> &nbsp; Add New Department
