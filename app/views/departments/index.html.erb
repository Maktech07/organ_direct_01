<h1>Listing departments</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @departments.each do |department| %>
      <tr>
          <td><div class="h4"><%= department.name %></div></td>
        <td><%= link_to 'Show', department, class: "btn btn-primary" %>
        <%= link_to 'Edit', edit_department_path(department), class: "btn btn-info" %>
        <%= link_to 'Destroy', department, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '', new_department_path, class: "btn btn-success glyphicon glyphicon-plus" %> &nbsp; Add New Department
