
<div class="row">
    <div class="col-xs-7">
        <h1>Listing Extensions</h1> 
    </div>
    <div class="col-xs-3 mid-top-margin" >
        <%= link_to '', new_extension_path, class: "btn add-new-btn glyphicon glyphicon-plus" %> &nbsp; Add New Extension
    </div>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Ext</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @extensions.each do |extension| %>
      <tr>
        <td><%= extension.ext %></td>
        <td>
            <div>
                <%= link_to '', extension, class: "btn show-btn glyphicon glyphicon-eye-open", title: "Show" %>
                <%= link_to '', edit_extension_path(extension), class: "btn edit-btn glyphicon glyphicon-pencil", title: "Edit" %>
                <%= link_to '', extension, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn destroy-btn glyphicon glyphicon-remove-sign", title: "Delete" %>
            </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

